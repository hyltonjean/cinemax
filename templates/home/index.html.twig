{% extends 'base.html.twig' %}

{% block body %}
	<!-- home -->
	<section class="home section section--bg" data-bg="assets/img/section/section.jpg">

		<div class="container">
			<div class="row">
				<div class="col-12">
					<h1 class="home__title">
						<b>NOW SHOWING</b>
						AT CINEMAX</h1>
				</div>

				<div class="d-flex justify-content-center col-12">
					{% for movie in movies %}
						<div
							class="item" style="margin:50px;">
							<!-- card -->
							<div class="card">
								<a href="{{path('movie_show', {'id':movie.id})}}" class="">
									<div class="card__cover">
										<img src="{{movie.imgurl}}" alt="" style="width: 350px;">
									</div>
								</a>
								<div class="card__content">
									<h3 class="card__title" style="margin-bottom:5px;">
										<a href="{{path('movie_show', {'id':movie.id})}}">{{movie.moviename}}</a>
									</h3>
									<span class="card__category">
										<ul class="card__list" style="margin-bottom:15px; margin-left:0!important;">
											<li>IMAX</li>
											<li>Nouveau</li>
											<li>3D</li>
											<li>13</li>
										</ul>
									</span>
									<a href="{{ path('app_booking_new') }}" class="header__sign-in">
										<span>Book Now</span>
									</a>
								</div>
							</div>
							<!-- end card -->
						</div>
					{% endfor %}

				</div>
			</div>
		</div>
	</section>
	<!-- end home -->
{% endblock %}
